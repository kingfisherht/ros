<?xml version="1.0"?>
<robot name="xuepen_robot">
    <link name="base_link" >
        <material name="blue" >
            <color rgba="0 0 0.8 0.6" />
        </material>
        <visual>
            <geometry>
                <box size="0.1 0.1 0.6"/>
            </geometry>
        </visual>
    </link>
    <joint name="joint1" type="revolute">
        <parent link="base_link"/>
        <child link="link2" />
        <origin rpy="0 0 0" xyz="0 0 .35"/>
        <axis xyz="1 0 0"/>
        <limit effort="1000.0" lower="0.0" upper="0.548" velocity="0.5"/>
     </joint>
    <link name="link2" >
        <visual>
            <geometry>
                 <sphere radius="0.05"/>
            </geometry>
         </visual>
    </link>
    <joint name="joint2" type="fixed">
        <parent link="link2"/>
        <child link="link3" />
       <origin rpy="0 0 0" xyz="0 0 .35"/>
    </joint>
    <link name="link3" >
        <visual>
            <geometry>
                 <box size="0.1 0.1 0.6"/>
            </geometry>
         </visual>
    </link>
</robot>
